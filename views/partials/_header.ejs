<!-- views/partials/_header.ejs -->

<head>
    <title>TinyApp</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="../../public/assets/style.css" rel="stylesheet" type="text/css">
</head>

<body>
<div class="p-3 mb-2 bg-secondary text-white">
    <div class="row">
        
        <div class="col">
            <h3>Tiny App URL-Shortener</h3>
            <% if (user_id) { %>
            <p><%= email %></p>
            <% } %>
        </div>
        
        <div class="col-lg-4">
            <p></p>
        </div>
        <div class="btn-group">
            <% if (user_id) { %>
                
            <form method="POST" action="/logout">
                <button class="btn btn-primary">LOGOUT</button>
            </form>
            <form method="GET" action="/urls">
                
                <button class="btn btn-primary">MY URLS</button>
                
            </form>
        </div>
            <% } else { %>
            <div class="btn-group" style="margin-left: 100px;">
                <a role="button" class="btn btn-primary" href="/login">LOGIN</a>
                <a role="button" class="btn btn-primary" href="/register">REGISTER</a>
            </div>
            <% } %>
        </div>
   
    </div>
</div>

</body>
    
    



